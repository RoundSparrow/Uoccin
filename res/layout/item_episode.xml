<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_frame"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_epitm_scrn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_text"
        android:src="@drawable/ic_action_image" />

    <Space
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/box_epitm_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@drawable/divider_2dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:showDividers="beginning|middle|end" >

        <TextView
            android:id="@+id/txt_epitm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ics_active_news"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/sample_episode"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/asdsad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_16dp"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/txt_epitm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ics_action_calendar"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/sample_date1"
                android:textColor="@color/textColorSecondary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_epitm_subs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ics_action_subtitles"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/sample_subs" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_2dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:showDividers="middle" >

        <ImageView
            android:id="@+id/img_epitm_coll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ics_action_storage" />

        <ImageView
            android:id="@+id/img_epitm_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ics_action_seen" />
    </LinearLayout>

</LinearLayout>