<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_ep_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/holo_orange_dark"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="@string/sample_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_ep_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/sample_episode"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_ep_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/sample_plot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/img_ep_coll"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/ic_action_storage" />

                <ImageView
                    android:id="@+id/img_ep_seen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/ic_action_seen" />

                <ImageView
                    android:id="@+id/img_ep_subs"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/empty_text"
                    android:src="@drawable/ic_action_subtitles" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_ep_scrn"
            android:layout_width="150dp"
            android:layout_height="84dp"
            android:layout_weight="0"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/tvdb_episode" />

    </LinearLayout>

</LinearLayout>
