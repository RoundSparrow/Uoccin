<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    android:background="@drawable/item_frame"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_ser_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_text"
        android:src="@drawable/tvdb_poster" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/txt_ser_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ser_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_info1"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>