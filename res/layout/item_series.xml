<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_frame"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="1dp" >

    <ImageView
        android:id="@+id/img_seritm_poster"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/empty_text"
        android:src="@drawable/ic_action_image" />

    <Space
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/box_seritm_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txt_seritm_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/sample_title1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_seritm_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:lines="3"
                android:text="@string/sample_plot1"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/box_seritm_stat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_seritm_coll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_small_storage"
                    android:drawableStart="@drawable/ic_small_storage"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/sample_stat"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_seritm_seen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_small_seen"
                    android:drawableStart="@drawable/ic_small_seen"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/sample_stat"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_seritm_epis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/txt_seritm_epis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/sample_episode"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_seritm_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/sample_date1"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_text" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_seritm_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:text="@string/sample_info"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_seritm_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:contentDescription="@string/empty_text"
            android:src="@drawable/ic_active_loved" />

    </LinearLayout>

</LinearLayout>