<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_ser_poster"
        android:layout_width="102dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/empty_text"
        android:src="@drawable/tvdb_poster" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_ser_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ser_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_info"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ser_plot"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="4"
            android:text="@string/sample_plot1" />

        <TextView
            android:id="@+id/txt_ser_actors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/sample_actors"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ser_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/sample_genres"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>