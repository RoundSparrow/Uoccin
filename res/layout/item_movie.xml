<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_mov_poster"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/empty_text"
        android:src="@drawable/omdb_poster" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_mov_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_2dp"
                android:orientation="vertical"
                android:showDividers="middle" >

                <TextView
                    android:id="@+id/txt_mov_plot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_plot1" />

                <TextView
                    android:id="@+id/txt_mov_actors"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_actors"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_mov_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_genres"
                    android:textStyle="italic" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>