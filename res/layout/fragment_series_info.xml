<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/txt_serinf_netw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="false"
            android:text="@string/sample_network"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_serinf_airt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_serinf_netw"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:text="@string/sample_time1"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/lbl_comm_ratd"
                android:textColor="@color/textColorSecondary" />

            <TextView
                android:id="@+id/txt_serinf_ratd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_rated"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_serinf_bann"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contentBackground"
                android:contentDescription="@string/empty_text"
                android:src="@drawable/ic_action_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contentBackground"
                android:gravity="center_horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_serinf_wlst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_loved"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_wlst" />

                <TextView
                    android:id="@+id/txt_serinf_coll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_storage"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_coll" />

                <TextView
                    android:id="@+id/txt_serinf_seen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_seen"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_seen" />

                <TextView
                    android:id="@+id/txt_serinf_shar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_share"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_shar" />

                <TextView
                    android:id="@+id/txt_serinf_refr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_refresh"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_refr" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/lbl_comm_plot"
                android:textSize="@dimen/mini_section_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_serinf_plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contentBackground"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/sample_plot1" />

            <LinearLayout
                android:id="@+id/box_serinf_acts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/lbl_serinf_with"
                    android:textSize="@dimen/mini_section_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_serinf_acts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/contentBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/sample_people" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_serinf_gens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/lbl_comm_gens"
                    android:textSize="@dimen/mini_section_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_serinf_gens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/contentBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/sample_genres" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_serinf_seas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/lbl_serinf_seas"
                    android:textSize="@dimen/mini_section_title"
                    android:textStyle="bold" />

                <net.ggelardi.uoccin.comp.ExpandableHeightGridView
                    android:id="@+id/grd_serinf_seas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/contentBackground"
                    android:columnWidth="40dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_serinf_rats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/lbl_comm_rats"
                    android:textSize="@dimen/mini_section_title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/contentBackground"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp" >

                    <RatingBar
                        android:id="@+id/rat_serinf_myrt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_serinf_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="@string/lbl_comm_tags"
                    android:textSize="@dimen/mini_section_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_serinf_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/contentBackground"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/sample_tags"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/lbl_comm_link"
                android:textSize="@dimen/mini_section_title"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contentBackground"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_serinf_tvdb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_link"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_tvdb" />

                <TextView
                    android:id="@+id/txt_serinf_imdb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_action_link"
                    android:gravity="center_horizontal"
                    android:text="@string/lbl_comm_imdb" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
